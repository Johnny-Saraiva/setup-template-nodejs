{
  "compilerOptions": {
    "target": "es2017",                          
    "module": "commonjs",                     
    "lib": ["ES6"],                             
    "allowJs": true,
    "outDir": "./dist",                        
    "rootDir": "./src", 
    "removeComments": true, 
    "strict": true,  
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ], 
    "esModuleInterop": true, 
    "resolveJsonModule": true,
    "experimentalDecorators": true,        
    "emitDecoratorMetadata": true, 
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@modules/*": ["modules/*"],
      "@config/*": ["config/*"],
      "@shared/*": ["shared/*"]
    },
  },
  "exclude": ["jest.config.js", "node_modules", "prettier.config.js", "coverage", "babel.config.js"]
}
